%head
  %script{src: "https://js.pay.jp/", type: "text/javascript"}
%body
  .exhibit-buy-wrapper
    .exhibit-buy-header
      %svg.exhibit-buy-header-logo{viewbox: "0 0 281.19 84.08", xmlns: "http://www.w3.org/2000/svg" }
        %defs
          :css
            .cls-1{fill:#dc4912;stroke:#fff;stroke-miterlimit:10;}.cls-2{font-size:48px;fill:#231815;font-family:YuGo-Bold-83pv-RKSJ-H, YuGothic;}
        %title アセット 3
        %g{"data-name" => "レイヤー 2", id: "レイヤー_2"}
          %g{"data-name" => "レイヤー 1", id: "レイヤー_1-2"}
            %polygon.cls-1{points: "36.41 83.5 0.5 62.77 0.5 21.31 36.41 0.58 72.32 21.31 72.32 62.77 36.41 83.5"}
            %polyline.cls-1{points: "0.5 21.31 36.41 42.04 72.32 21.31"}
            %polyline.cls-1{points: "36.41 83.5 36.41 49.36 36.41 42.04"}
            %line.cls-1{x1: "36.41", x2: "0.5", y1: "52.41", y2: "31.67"}
            %line.cls-1{x1: "72.32", x2: "36.41", y1: "33.2", y2: "50.88"}
            %text.cls-2{transform: "translate(86.41 62.77)"} Fmarket
    .exhibit-buy-contents
      %h2.exhibit-buy-contents__head
        購入内容の確認
      .exhibit-buy-content-main
        .exhibit-buy-content
          .content-box
            .exhibit-buy-image
              = image_tag  src="#{@image.image}", class: "exhibit-img"
            .exhibit-buy-textbox
              %p.exhibit-buy-textbox-name
                #{@exhibit.name}
              %p.exhibit-buy-textbox-price
                #{@exhibit.price}
        .exhibit-buy-content
          .content-box-second
            %p.content-box-second-text-left
              支払い金額
            %p.content-box-second-text-right
              ￥#{@exhibit.price}
          .content-box
            .chackbox-point
            %p.point-text
              ポイントを使用（所持ポイント：0p）
        .exhibit-buy-content
          .content-box-third
            %p.content-box-text-left
              支払い方法
            %p.content-box-text-right
              変更する
          .exhibit-card-infomation
            クレジットカード
            %br
            = "**** **** **** " + @card_information.last4
            %br
            有効期限
            - exp_month = @card_information.exp_month.to_s
            - exp_year = @card_information.exp_year.to_s.slice(2,3)
            = exp_month + " / " + exp_year
            = render "shared/cardbrand"
        .exhibit-buy-content
          .content-box-third
            %p.content-box-text-left
              配送先
            %p.content-box-text-right
              変更する
          .exhibit-address-infomation
            〒 #{@address.address_number}
            %br
            大阪府 #{@address.address_name} #{@address.address_block} #{@address.address_building}
            %br
            #{@address.address_family_name_kanji} #{@address.address_first_name_kanji}
        .exhibit-buy-content
          - if @exhibit.buyer_id == nil
            = link_to "購入する", "/cards/#{@exhibit.id}/pay", method: "POST", class:"purchasebutton"
          - else
            = link_to "この商品は購入されています", root_path, class:"purchasebutton"
    = render "shared/sabfooter"

