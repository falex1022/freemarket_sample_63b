          .progress-var__list--status
        %li.progress-var__list
          完了
          .progress-var__list--status#last
    .address-contents
      %h2.address-contents__head
        発送元・お届け先住所入力
      %form.address-form{action: "http://localhost:3000/signup/card", :method => "POST", :novalidate => "novalidate"}
        .address-form-list
          .form__group
            %label{for: "name"} お名前
            %span.form__group-alert 必須
            %input.input-def{name: "family_name", placeholder: "例) 山田", type: "text", value: ""}/
            %input.input-def{name: "first_name", placeholder: "例) 彩", type: "text", value: ""}/
          .form__group
            %label{for: "name"} お名前(カナ)
            %span.form__group-alert 必須
            %input.input-def{name: "family_name_kana", placeholder: "例) ヤマダ", type: "text", value: ""}/
            %input.input-def{name: "first_name_kana", placeholder: "例) アヤ", type: "text", value: ""}/
          .form__group
            %label{for: "zip_code1"} 郵便番号
            %span.form__group-alert 必須
            %input.input-def{"data-region" => "jp", maxlength: "8", name: "zip_code1", pattern: "\\d{3}-\\d{4}", placeholder: "例) 123-4567", type: "text", value: ""}/
          .form__group
            %label{for: "prefecture"} 都道府県
            %span.form__group-alert 必須
            %br
            %select.select-def{name: "prefecture"}
              %option{value: "北海道"} 北海道
              %option{value: "青森県"} 青森県
