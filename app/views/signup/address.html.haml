          .form__group
            %label{for: "city"} 市区町村
            %span.form__group-alert 必須
            %input.input-def{name: "city", placeholder: "例) 横浜市緑区", type: "text", value: ""}/
          .form__group
            %label{for: "address1_label"} 番地
            %span.form__group-alert 必須
            %input.input-def{name: "address1", placeholder: "例) 青山1−1−1", type: "text", value: ""}/
          .form__group
            %label{for: "address2_label"} 建物名
            %span.form__group-arbitrary 任意
            %input.input-def{name: "address2", placeholder: "例) 柳ビル103", type: "text", value: ""}/
          .form__group
            %label{for: "address2_label"} 電話
            %span.form__group-arbitrary 任意
            %input.input-def{name: "telephone", placeholder: "例) 09012345678", type: "number", value: ""}/
          %input{name: "after_save_callback", type: "hidden", value: ""}/
          %button.address-btn-submit{type: "submit"} 次へ進む
